      <body style="font-family: 'Roboto';  background-color: #ffffff">

      <!--  s t a r t   o f   l o g i n   f o r m   -->

  <br>
  <br>
  <div class="mx-auto" >
    <div class="row mx-auto" >
      <div class="loginbox mx-auto col-lg-5 col-sm-7 mx-auto" style="background-color: antiquewhite; margin: 15px auto; border-radius: 20px;">
        <center>
          <h1>Login </h1>
        </center>
            <% if(msg != ''){ %>
               <div class="col-md-12 mb-3">
              <div class="panel panel-info" style="background-color:rgb(239, 239, 246); border: none">
              <% if(msg == 'Login successfully.' || msg == 'Successfully registered.'){ %>
              <div class="alert alert-success alert-dismissible">
                  <strong>      
              <%= msg %>
                  </strong>
              </div>
              <% } else{ %>
                <div class="alert alert-danger alert-dismissible">
                  <strong>      
              <%= msg %>
                  </strong>
              </div>
                <% } %>
               </div>
           </div>
            <% } %>
           

         
          <form action="/login" method="POST">
              <div class="col-md-12 mb-3">
                <label for="validationServer01">Username</label>
                <input type="text" name="Username" class="form-control is-valid" id="validationServer01" placeholder="Enter username" required>
              </div>
              <div class="col-md-12 mb-3">
                <label for="validationServer02">Password</label>
                <input type="password" name="password" class="form-control is-valid" id="validationServer02" placeholder="Enter password" required>
              </div>
              <div class="col-md-12 mb-3">
               <br>
               <br>
                <center>
                  <button class="btn1 btn btn-lg btn-block" type="submit" value="signup">  L o g i n   </button>
                </center>
              </div>
              <div class="col-md-12 mb-3">
                <center>
                  <span>Create new account? </span><a href="/signup"> Register here </a>
                </center>
                <br>
              </div>
          </form>
      
        </div>
      </div>
    </div>
