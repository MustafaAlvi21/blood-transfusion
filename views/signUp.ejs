    <div class="mx-auto" >
      <div class="row mx-auto" >
        <div class="loginbox mx-auto col-lg-5 col-sm-7 mx-auto" style="background-color: antiquewhite; margin: 15px auto; border-radius: 20px;">
          <center>
            <h1>Register Form</h1>
            <h1> <%= msg %> </h1>
          </center>
            <form onsubmit="return ValidationEvent()" action="/signUp" method="POST" >
              <div class="mb-3">
                <label for="validationServerUsername">Username<span style="color: red;">*</span> </label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupPrepend3"><span class="glyphicon glyphicon-user"></span> </span>
                  </div>
                  <input type="text" class="form-control" name="Username" id="validationServerUsername" placeholder="Enter Username" aria-describedby="inputGroupPrepend3" required>
                        <% if(usernameMsg != ''){ %>
                          <p style="color: red;"> <b> <%= usernameMsg %> </b> </p>
                      <% } %>
                  <div class="invalid-feedback">
                    <!-- Please choose a username. -->
                  </div>
                </div>
              </div>
              <div class="mb-3">
                <label for="validationServerUsername">Email<span style="color: red;">*</span> </label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupPrepend3">@</span>
                  </div>
                  <input type="email" name="Email" class="form-control" id="validationServerUsername" placeholder="Enter Email" aria-describedby="inputGroupPrepend3" required>
                        <% if(emailMsg != ''){ %>
                              <p style="color: red;"> <%= emailMsg %> </p>
                        <% } %>
                  <div class="invalid-feedback">
                    <!-- Please enter a email. -->
                  </div>
                </div>
              </div>
              <div>
              <div class="form-row">
              <div class="col mb-3">
                <label for="validationServerUsername">Password<span style="color: red;">*</span> </label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupPrepend3">@</span>
                  </div>
                  <input type="password" name="password" onkeyup="passwordLenght()" class="form-control" id="validatePassword" placeholder="Enter Password" aria-describedby="inputGroupPrepend3" required>
                    <span class="invalid-password" style="display: none; color: red;"> Password is not strong enough. </span>
                </div> 
              </div>
              <div class="col mb-3">
                <label for="validationServerUsername">Re-password<span style="color: red;">*</span> </label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupPrepend3">@</span>
                  </div>
                  <input type="password" onkeyup="passwordMatch()" class="form-control" id="validateConPassword" placeholder="Enter Password Again" aria-describedby="inputGroupPrepend3" required>
                  <span class="invalid-conPassword col-12" style="display: none; color: red;"> Passwords dose'nt match. </span>
                  <span class="conPassword col-12" style="display: none; color: #4F8A10;"> Passwords matches. </span>
                </div>
              </div>
              </div>
          </div>
            <div class="form-row">
              <div class="col mb-3">
                <label for="validationServer04">Date of Birth</label>
                <input type="text" name="Date_of_Birth" class="form-control" id="validationServer04" placeholder="Enter Date of Birth" >
                <div class="invalid-feedback">
                  <!-- Please provide a valid state. -->
                </div>
              </div>
              <div class="col mb-3">
                <label for="validationServer03">Gender<span style="color: red;">*</span> </label>
               
                <!-- <input type="text" name="Gender" class="form-control" id="validationServer03" placeholder="Enter Gender" required> -->
               
                <select id="options" onselect="return gender()" class="form-control" name="Gender" id="validationServer03" style="height: 30px;" required>
                  <span class="invalid-gender col-12" style="display: none; color: red;"> Select valid Gender. </span>
                  <option selected>Enter Gender</option>
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                  <option value="Other">Other</option>
                </select>
                <div class="invalid-feedback">
                  <!-- Please provide a valid city. -->
                </div>
              </div>
            </div> 
           
            <div class="form-row">
                <div class="col mb-3">
                    <label for="validationServerUsername">Phone </label>
                    <div class="input-group">
                      <input type="text" name="phone" onkeyup="phoneLenght()" class="form-control" id="validatePhone" placeholder='Enter Phone number ' aria-describedby="inputGroupPrepend3" >
                        <span class="invalid-phone" style="display: none; color: red;">   </span>
                    </div>
                  </div>
              <div class="col mb-3">
                <label for="validationServer03">City<span style="color: red;">*</span> </label>
                <input type="text" name="city" class="form-control" id="validationServer03" placeholder="Enter City" required>
                <div class="invalid-feedback">
                  <!-- Please provide a valid city. -->
                </div>
              </div>
            </div> 
           
            <div class="mb-3">
                <label for="validationServerUsername">Profile Info</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupPrepend3"><span class="glyphicon glyphicon-user"></span> </span>
                  </div>
                  <!-- <input type="text" class="form-control" name="Profile_Info" id="validationServerUsername" placeholder="Enter Profile info" aria-describedby="inputGroupPrepend3" > -->
                  <textarea id="textarea1" class="form-control" onkeydown=" return Validate() " name="Profile_Info" id="exampleFormControlTextarea1" rows="3" placeholder="Enter Your Profile info must be less than 25" required></textarea>
                  <div class="invalid-feedback">
                    <!-- Please choose a username. -->
                  </div>
                </div>
              </div>

            <div class="form-group">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck3" required>
                <label class="form-check-label" for="invalidCheck3">
                  &nbsp; Agree to terms and conditions
                </label>
                <div class="invalid-feedback">
                  You must agree before submitting.
                </div>
              </div>
            </div>
            <div class="col-md-12 mb-3">
              <br>
              <center>
                <button class="btn1 btn btn-lg btn-block submitBtn" type="submit" value="signup">  S u b m i t &nbsp; &nbsp;  f o r m   </button>
              </center>
            </div>
            <div class="col-md-12 mb-3">
              <center>
                <span>Already have account? </span><a href="/login"> login here </a>
              </center>
              <br>
            </div>
          </form>
          
        </div>
        </div>
