<script>
      var conPassword = document.getElementById('validateConPassword');
      function passwordLenght(){
        var password = document.getElementById('validatePassword').value;
        if (password.length < 6) {
          document.querySelector('.submitBtn').disabled = true
          document.querySelector('.invalid-password').style.display = "block";
        }
        else{
          document.querySelector('.invalid-password').style.display = "none";
        }
      }
      function passwordMatch(){
        var password = document.getElementById('validatePassword').value;
        console.log(password)
        var conPassword = document.getElementById('validateConPassword').value;
        console.log(conPassword)
        if (password != conPassword){
          document.querySelector('.submitBtn').disabled = true
          document.querySelector('.conPassword').style.display = "none";
          document.querySelector('.invalid-conPassword').style.display = "block";
        }
        else{
          document.querySelector('.submitBtn').disabled = false
          document.querySelector('.conPassword').style.display = "block";
          document.querySelector('.invalid-conPassword').style.display = "none";}
      }

      function phoneLenght(){
        var password = document.getElementById('validatePhone').value;
        if (password.length < 6) {
        //   document.querySelector('.submitBtn').disabled = true
          document.querySelector('.invalid-phone').style.display = "block";
        }
        else{
          document.querySelector('.invalid-phone').style.display = "none";
        }
      }

